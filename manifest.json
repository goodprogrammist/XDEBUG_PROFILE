{
    "manifest_version": 2,
    "name": "Manage XDEBUG_PROFILE Cookie for Debugging",
    "version": "0.1",

    "description": "Manage cookie that disables Composite technology.",
    "homepage_url": "https://github.com/goodprogrammist/XDEBUG_PROFILE",

    "icons": {
        "64": "icons/bug-green-64.png",
        "128": "icons/bug-green-128.png"
    },

    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": {
            "64": "icons/bug-light-64.png",
            "128": "icons/bug-light-128.png"
        },
        "default_title": "XDEBUG_PROFILE (off)"
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "applications": {
        "gecko": {
            "id": "XDEBUG_PROFILE_cookie_setup@goodprogrammist.ru"
        }
    },

    "background": {
        "scripts": ["cookie_XDEBUG_PROFILE.js"]
    }
}
