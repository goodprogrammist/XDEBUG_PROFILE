{
    "manifest_version": 2,
    "name": "Manage _NCC Cookie for Bitrix",
    "version": "0.1",

    "description": "Manage cookie that disables Composite technology.",
    "homepage_url": "https://github.com/goodprogrammist/bitrix_NCC_cookie",

    "icons": {
        "64": "icons/bug-green-64.png",
        "128": "icons/bug-green-128.png"
    },

    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": {
            "64": "icons/bug-light-64.png",
            "128": "icons/bug-light-128.png"
        },
        "default_title": "_NCC (off)"
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "applications": {
        "gecko": {
            "id": "cookie_ncc@goodprogrammist.ru"
        }
    },

    "background": {
        "scripts": ["cookie_ncc.js"]
    }
}
